<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.songnick.MainActivity">

    <Button
        android:id="@+id/start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动Service"/>
    <Button
        android:id="@+id/bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind_service"
        android:layout_below="@+id/start_service"/>
    <Button
        android:id="@+id/finish_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finish_app"
        android:visibility="gone"
        android:layout_below="@+id/bind_service"/>
    <Button
        android:id="@+id/show_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示浮动窗口"
        android:layout_below="@+id/finish_app"/>
    <Button
        android:id="@+id/hide_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏浮动窗口"
        android:layout_below="@+id/show_window"/>
    <Button
        android:id="@+id/stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止Service"
        android:layout_below="@+id/hide_window"/>
</RelativeLayout>
